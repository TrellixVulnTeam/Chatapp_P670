<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffff"
    android:orientation="vertical"
    android:layout_height="match_parent">


<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="20dp"
    android:layout_width="370dp"
    android:orientation="vertical"
    android:background="#303c4d"
    android:layout_gravity="center"
    android:layout_height="530dp"
    tools:context="com.example.user.chitchat.ProfileActivity">
    <TextView
        android:layout_width="30dp"
        android:id="@+id/cross"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity="right"
        android:text="X"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="1800dp"
        android:id="@+id/profile_picture"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:src="@drawable/user"/>
    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Mohit"
        android:textColor="#ffff"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:id="@+id/user_profile_name"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What Cook'in"
        android:textColor="#ffff"
        android:layout_marginTop="0dp"
        android:textSize="20sp"
        android:id="@+id/status_profile_name"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="left"
        android:layout_height="120dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:textSize="25sp"
            android:textColor="#fff"
            android:id="@+id/total_friends_count"
            android:gravity="center"
            android:background="@color/orange"
            android:layout_gravity="center"
            android:text="150 Friends"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:textSize="25sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="@color/green"
            android:layout_gravity="center"
            android:text="50                     Mutual Friends "
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:textSize="25sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="@color/bluelight"
            android:layout_gravity="center"
            android:text="110
Following"
            />


    </LinearLayout>
    <Button
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/editext"
        android:id="@+id/send_friend_request"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Send Friend Request"
        android:textColor="#000000"/>
    <Button
        android:layout_width="220dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/editext"
        android:id="@+id/accept_friend_request"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Decline Friend Request"
        android:textColor="#000000"/>


</LinearLayout>

</LinearLayout>